<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:width="378dp"
        android:height="100dp"
        android:gravity="right|bottom"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/button_clear"
        app:layout_constraintStart_toEndOf="@+id/button_clear"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:onClick="onClick"
        android:text="/"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_number9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_number9" />

    <Button
        android:id="@+id/button_number8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:onClick="onClick"
        android:text="8"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/button_number9"
        app:layout_constraintStart_toEndOf="@+id/button_number7"
        app:layout_constraintTop_toBottomOf="@+id/button_clear" />

    <Button
        android:id="@+id/button_number7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="5dp"
        android:onClick="onClick"
        android:text="7"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_number8"
        app:layout_constraintEnd_toStartOf="@+id/button_number8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_AC" />

    <Button
        android:id="@+id/button_number9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:onClick="onClick"
        android:text="9"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_number8"
        app:layout_constraintEnd_toStartOf="@+id/button_divide"
        app:layout_constraintStart_toEndOf="@+id/button_number8" />

    <Button
        android:id="@+id/button_number4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="5dp"
        android:onClick="onClick"
        android:text="4"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_number5"
        app:layout_constraintEnd_toStartOf="@+id/button_number5"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_number7" />
    <Button
        android:id="@+id/button_number5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:onClick="onClick"
        android:text="5"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/button_number6"
        app:layout_constraintStart_toEndOf="@+id/button_number4"
        app:layout_constraintTop_toBottomOf="@+id/button_number8" />

    <Button
        android:id="@+id/button_number6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:onClick="onClick"
        android:text="6"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_number5"
        app:layout_constraintEnd_toStartOf="@+id/button_multiple"
        app:layout_constraintStart_toEndOf="@+id/button_number5" />

    <Button
        android:id="@+id/button_multiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:onClick="onClick"
        android:text="*"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_number6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_number6" />

    <Button
        android:id="@+id/button_number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:onClick="onClick"
        android:text="1"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_number2"
        app:layout_constraintEnd_toStartOf="@+id/button_number2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_number4" />

    <Button
        android:id="@+id/button_number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:onClick="onClick"
        android:text="2"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/button_equ"
        app:layout_constraintEnd_toStartOf="@+id/button_number3"
        app:layout_constraintStart_toEndOf="@+id/button_number1" />

    <Button
        android:id="@+id/button_number3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:onClick="onClick"
        android:text="3"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_number2"
        app:layout_constraintEnd_toStartOf="@+id/button_sub"
        app:layout_constraintStart_toEndOf="@+id/button_number2" />

    <Button
        android:id="@+id/button_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:onClick="onClick"
        android:text="-"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_number3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_number3" />

    <Button
        android:id="@+id/button_number0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="5dp"
        android:onClick="onClick"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_equ"
        app:layout_constraintEnd_toStartOf="@+id/button_equ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_number1" />

    <Button
        android:id="@+id/button_equ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="="
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_dot"
        app:layout_constraintEnd_toStartOf="@+id/button_dot"
        app:layout_constraintStart_toEndOf="@+id/button_number0" />

    <Button
        android:id="@+id/button_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="16dp"
        android:onClick="onClick"
        android:text="."
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_add"
        app:layout_constraintStart_toEndOf="@+id/button_equ" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:onClick="onClick"
        android:text="+"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_dot" />


    <Button
        android:id="@+id/button_AC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="5dp"
        android:onClick="onClick"
        android:text="AC"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_clear"
        app:layout_constraintEnd_toStartOf="@+id/button_clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_show" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="C"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/button_left"
        app:layout_constraintStart_toEndOf="@+id/button_AC"
        app:layout_constraintTop_toBottomOf="@+id/et_show" />

    <Button
        android:id="@+id/button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:onClick="onClick"
        android:text="("
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_clear"
        app:layout_constraintEnd_toStartOf="@+id/button_right"
        app:layout_constraintStart_toEndOf="@+id/button_clear" />

    <Button
        android:id="@+id/button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:onClick="onClick"
        android:text=")"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_left" />
</androidx.constraintlayout.widget.ConstraintLayout>